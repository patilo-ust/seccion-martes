model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  tickets   Ticket[] // tickets creados por el usuario
  createdAt DateTime @default(now())
}

model Agent {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  tickets   Ticket[] // tickets asignados
  createdAt DateTime @default(now())
}

model Ticket {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  status      TicketStatus @default(PENDING)
  priority    TicketPriority @default(MEDIUM)
  userId      Int
  agentId     Int?
  user        User       @relation(fields: [userId], references: [id])
  agent       Agent?     @relation(fields: [agentId], references: [id])
  comments    Comment[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  ticketId  Int
  authorId  Int
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  author    Agent    @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

/// Enum para estados de ticket
enum TicketStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}

/// Enum para prioridades
enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
